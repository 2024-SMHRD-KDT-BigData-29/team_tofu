<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.smhrd.myapp.mapper.MessageMapper">

	<insert 
		id="messageSend"
		parameterType="kr.smhrd.myapp.entity.Message"	
	>
	
		insert into message(sendName, receiveEmail, content) 
		values(#{sendName}, #{receiveEmail}, #{content});
	
	</insert>

	<select 
		id="messageShow"
		parameterType="string"
		resultType="kr.smhrd.myapp.entity.Message">
	
		select * from message where receiveEmail=#{email}
	
	</select>
	
<!-- 	<delete id="deleteMessage" parameterType="int">
		delete from message where idx=#{idx}
	</delete> -->







</mapper>