<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.together.furture.mapper.comment_mapper">
	<insert 
		id="comment_send"
		parameterType="com.together.furture.entity.comment_info"	
	>
		insert into comment_info(user_id, cmt_content, created_at, cmt_idx, feed_idx) 
		values(#{user_id}, #{cmt_content}, now(), #{cmt_idx}, #{feed_idx});
	</insert>
	
	<select 
		id="comment_show"
		parameterType="String"
		resultType="com.together.furture.entity.comment_info"
	>
		select * from comment_info where user_id=#user_id
	</select>
</mapper>